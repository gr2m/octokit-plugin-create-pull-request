{
  "name": "octokit-plugin-create-pull-request",
  "version": "0.0.0-development",
  "description": "Octokit plugin to create a pull request with multiple file changes",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "lint": "prettier --check \"{src,test}/**/*.{ts,md}\" *.md package.json tsconfig.json",
    "lint:fix": "prettier --write \"{src,test}/**/*.{ts,md}\" *.md package.json tsconfig.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "keywords": [
    "github",
    "octokit",
    "plugin",
    "pull-request"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "dependencies": {
    "@octokit/types": "^8.0.0"
  },
  "devDependencies": {
    "@octokit/core": "^4.1.0",
    "@octokit/plugin-paginate-rest": "^5.0.1",
    "@types/jest": "^29.2.0",
    "@types/node": "^14.14.25",
    "esbuild": "^0.23.0",
    "glob": "^11.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.7.1",
    "semantic-release": "^21.0.1",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "repository": "github:gr2m/octokit-plugin-create-pull-request",
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
